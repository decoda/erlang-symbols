{
    "name": "erlang-symbols",
    "displayName": "erlang-symbols",
    "description": "VSCode Erlang symbols search methods",
    "version": "1.0.2",
    "publisher": "decoda",
    "icon": "images/erlang.png",
    "license": "MIT",
    "engines": {
        "vscode": "^1.51.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:erlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/decoda/erlang-symbols"
    },
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "erlang",
                "aliases": [
                    "Erlang",
                    "erlang"
                ],
                "extensions": [
                    ".erl",
                    ".hrl",
                    ".yrl",
                    ".escript",
                    ".app.src",
                    ".config"
                ],
                "filenames": [
                    "rebar.lock"
                ]
            }
        ],
        "grammars": [
            {
                "language": "erlang",
                "scopeName": "source.erlang",
                "path": "./syntaxes/erlang.tmLanguage"
            }
        ],
        "configuration": {
            "title": "erlang-symbols",
            "properties": {
                "erlang-symbols.searchPaths": {
                    "type": "array",
                    "default": [
                        "src"
                    ],
                    "description": "List of relative paths to search function definition from"
                },
                "erlang-symbols.includeFiles": {
                    "type": "string",
                    "default": "include/**/*.hrl",
                    "description": "Glob pattern for include files to search in erl"
                },
                "erlang-symbols.erlangPath": {
                    "type": "string",
                    "default": "",
                    "description": "Erlang install path"
                },
                "erlang-symbols.autoComplete": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable auto complete function in erlang libs"
                },
                "erlang-symbols.autoIndent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable auto indent"
                }
            }
        },
        "commands": []
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.51.0",
        "@types/q": "^1.5.1",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5"
    },
    "dependencies": {
        "q": "^1.5.1"
    }
}
