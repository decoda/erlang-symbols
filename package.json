{
    "name": "erlang-symbols",
    "displayName": "erlang-symbols",
    "description": "VSCode Erlang symbols search methods",
    "version": "0.0.6",
    "publisher": "tangj",
    "icon": "erlang.png",
    "license": "MIT",
    "engines": {
        "vscode": ">=1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:erlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/decoda/erlang-symbols"
    },
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "erlang",
                "aliases": [
                    "Erlang",
                    "erlang"
                ],
                "extensions": [
                    ".erl",
                    ".hrl",
                    ".yrl",
                    ".escript",
                    ".app.src",
                    ".config"
                ],
                "filenames": [
                    "rebar.lock"
                ]
            }
        ],
        "grammars": [
            {
                "language": "erlang",
                "scopeName": "source.erlang",
                "path": "./syntaxes/erlang.tmLanguage"
            }
        ],
        "configuration": {
            "title": "erlang-symbols",
            "properties": {
                "erlang-symbols.searchPaths": {
                    "type": "array",
                    "default": ["src"],
                    "description": "List of relative paths to search function definition from"
                }
            }
        },
        "commands": []
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
